<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
	xmlns:bb='urn:import:com.github.gwtbootstrap.client.ui.base'>

	<b:Modal ui:field="commentModal" title="Add a comment"
		backdrop="STATIC" keyboard="true" animation="true">

		<b:FluidContainer>
			<b:WellForm ui:field="commentForm">
				<b:ControlLabel>Comment (1-500 characters):</b:ControlLabel>
				<b:ControlGroup ui:field="commentCG">
					<b:TextArea ui:field="comment" placeholder="Between 1 and 500 characters"
						maxLength="500" width="400px"></b:TextArea>
				</b:ControlGroup>
			</b:WellForm>
		</b:FluidContainer>

		<b:ModalFooter>
			<b:Button ui:field="saveButton" icon="SAVE" type="PRIMARY">Save</b:Button>
		</b:ModalFooter>

	</b:Modal>

</ui:UiBinder>