<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
	xmlns:bb='urn:import:com.github.gwtbootstrap.client.ui.base' xmlns:my='urn:import:com.pronoiahealth.olhie.client.widgets'>

	<g:HTMLPanel ui:field="bookcaseContainer" styleName="ph-Bookcase-Container">
		<g:TabLayoutPanel ui:field="tabPanel"
			animationDuration="1000" barHeight="2.5" barUnit="EM"
			stylePrimaryName="ph-Bookcase-Marker" height="100%">
			<g:tab>
				<g:customHeader size='7'>
					<b:Image url="Olhie/images/Authored.png"></b:Image>
				</g:customHeader>
				<g:HTMLPanel ui:field="myBooksTab" styleName="ph-Bookcase-MyBooksTab"
					height="100%">
				</g:HTMLPanel>
			</g:tab>
			<g:tab>
				<g:customHeader size='7'>
					<b:Image url="Olhie/images/CoAuthored.png"></b:Image>
				</g:customHeader>
				<g:HTMLPanel ui:field="myCoBooksTab" styleName="ph-Bookcase-CoAuthorTab"
					height="100%">
				</g:HTMLPanel>
			</g:tab>
			<g:tab>
				<g:customHeader size='7'>
					<g:HTMLPanel>
						<b:Image url="Olhie/images/Collection.png"></b:Image>
						<b:Icon ui:field="spinner" spin="true" type="SPINNER" size="LARGE"></b:Icon>
					</g:HTMLPanel>
				</g:customHeader>
				<g:HTMLPanel ui:field="myCollectionTab" styleName="ph-Bookcase-MyCollectionTab"
					height="100%">
				</g:HTMLPanel>
			</g:tab>
		</g:TabLayoutPanel>
	</g:HTMLPanel>

</ui:UiBinder>