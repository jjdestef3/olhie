<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
	xmlns:bb='urn:import:com.github.gwtbootstrap.client.ui.base' xmlns:my='urn:import:com.pronoiahealth.olhie.client.widgets'
	xmlns:chzn='urn:import:com.watopi.chosen.client.gwt'>

	<b:Hero ui:field="hero">
		<g:HTMLPanel width="100%">
			<div style="width: 40px; margin: 0 auto;">
				<img src="Olhie/images/Pushpin.gif" />
			</div>
		</g:HTMLPanel>
		<b:Heading size="2">Learn about Olhie</b:Heading>
		<b:Paragraph>
			<b:SplitDropdownButton ui:field="helpTopic" text="Select a help topic"
				icon="MAGIC">
			</b:SplitDropdownButton>
		</b:Paragraph>
		<b:Paragraph>
			<g:HTML ui:field="topicTitle"></g:HTML>
		</b:Paragraph>
		<g:HTMLPanel>
			<g:Frame ui:field="videoFrame" height="481px" width="604px"></g:Frame>
		</g:HTMLPanel>
	</b:Hero>

</ui:UiBinder>