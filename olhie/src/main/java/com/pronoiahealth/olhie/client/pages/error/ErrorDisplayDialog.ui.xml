<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
	xmlns:bb='urn:import:com.github.gwtbootstrap.client.ui.base' xmlns:my='urn:import:com.pronoiahealth.olhie.client.widgets'>

	<b:Modal ui:field="errorDisplayModal" title="Error" backdrop="STATIC"
		keyboard="true" animation="true">
		
		<g:HTMLPanel>
			<g:ScrollPanel ui:field="errorMsgPanel" height="100px" styleName="ph-ErrorDialog-ErrorMsg-Container">
				<g:HTML ui:field="errorMsg"></g:HTML>
			</g:ScrollPanel>
		</g:HTMLPanel>

		<b:ModalFooter>
			<b:Button ui:field="closeButton" icon="CIRCLE_ARROW_RIGHT" type="PRIMARY">Close</b:Button>
		</b:ModalFooter>
	</b:Modal>

</ui:UiBinder>