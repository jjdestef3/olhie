<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
	xmlns:bb='urn:import:com.github.gwtbootstrap.client.ui.base' xmlns:star='urn:import:com.pronoiahealth.olhie.client.widgets.rating' 
	xmlns:iosswitch='urn:import:com.pronoiahealth.olhie.client.widgets.iosswitch'>

	<b:Hero ui:field="bookHero">
		<g:HorizontalPanel borderWidth="0">
			<g:HTMLPanel ui:field="bookImagePanelHolder">
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="addToCollectionPanelHolder">
			</g:HTMLPanel>
			<g:VerticalPanel>
				<g:ScrollPanel ui:field="titleLabel"
					styleName="ph-SearchResults-BookListResult-BookLabel"></g:ScrollPanel>
				<b:Label ui:field="authorLabel"></b:Label>
				<b:Label ui:field="pubDateLabel"></b:Label>
				<star:StarRating ui:field="ratingLabel"></star:StarRating>
			</g:VerticalPanel>
		</g:HorizontalPanel>
	</b:Hero>

</ui:UiBinder>