<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
	xmlns:bb='urn:import:com.github.gwtbootstrap.client.ui.base'>

	<b:Modal ui:field="bookDescriptionModal" title="Book Description Detail"
		backdrop="STATIC" keyboard="true" animation="true">

		<!-- Comment form -->
		<b:WellForm ui:field="bookDetailForm" type="HORIZONTAL">
			<b:Fieldset ui:field="controlFieldset">
				<b:Legend ui:field="legendTxt">Book Title</b:Legend>
				<b:ControlGroup ui:field="addedDateGroup">
					<b:ControlLabel for="addedDate">Added Date:</b:ControlLabel>
					<b:Controls>
						<b:TextBox ui:field="adddedDate" controlGroup="{addedDateGroup}"
							readOnly="true" />
					</b:Controls>
				</b:ControlGroup>
				<b:ControlGroup ui:field="hoursToCreateGroup">
					<b:ControlLabel for="hoursToCreate">Hours to Create:</b:ControlLabel>
					<b:Controls>
						<b:TextBox ui:field="hoursToCreate" controlGroup="{hoursToCreateGroup}" readOnly="true" />
					</b:Controls>
				</b:ControlGroup>
				<b:ControlGroup ui:field="assetTypeGroup">
					<b:ControlLabel for="assetType">Type:</b:ControlLabel>
					<b:Controls>
						<b:TextBox ui:field="assetType" controlGroup="{assetTypeGroup}" readOnly="true"/>
					</b:Controls>
				</b:ControlGroup>
			</b:Fieldset>
		</b:WellForm>

		<b:ModalFooter>
			<b:Button ui:field="closeButton" icon="CIRCLE_ARROW_RIGHT"
				type="PRIMARY">Close</b:Button>
		</b:ModalFooter>

	</b:Modal>

</ui:UiBinder>